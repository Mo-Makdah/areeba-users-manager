{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types", "@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "ts-node": { "files": true }
}
